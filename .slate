#################################
# General Config
#################################
config defaultToCurrentScreen true
# Shows app icons and background apps, spreads icons in the same place.
config windowHintsShowIcons true
config windowHintsIgnoreHiddenWindows false
config windowHintsSpread true

config windowHintsFontColor 20;20;20;1.0
# config windowHintsFontColor 247;127;190;1.0 #another color
config windowHintsWidth 50
config windowHintsHeight 50

#################################
# Abstract Position for windows management
#################################
alias full move screenOriginX;screenOriginY screenSizeX;screenSizeY #full screen
alias lefthalf move screenOriginX;screenOriginY screenSizeX/2;screenSizeY
alias righthalf move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY
alias rightlarge move screenOriginX;screenOriginY screenSizeX/4*3;screenSizeY
alias leftsmall move screenOriginX+screenSizeX/4*3;screenOriginY screenSizeX/4;screenSizeY
# Key bindings for those position
bind 0:ctrl;alt;cmd ${full}		#ctrl+cmd+alt+0 for full screen
bind 3:ctrl;alt;cmd ${lefthalf}	#ctrl+cmd+alt+3 for left half
bind 4:ctrl;alt;cmd ${righthalf} #ctrl+cmd+alt+4 for right half
bind 1:ctrl;alt;cmd ${rightlarge} #ctrl+cmd+alt+1 for right large
bind 2:ctrl;alt;cmd ${leftsmall} #ctrl+cmd+alt+1 for left small

